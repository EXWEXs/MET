//
// Forecast and observation fields to be verified
//
fcst = {

   field = [
      {
        name       = "APCP_12";
        level      = [ "(*,*)" ];
        cat_thresh = [ >0.0, >=5.0 ];
      }
   ];

}
obs = fcst;

////////////////////////////////////////////////////////////////////////////////

//
// Climatology mean data
//
climo_mean = {

   file_name = [];
   field     = [];

   regrid = {
      method     = NEAREST;
      width      = 1;
      vld_thresh = 0.5;
   }

   time_interp_method = DW_MEAN;
   match_day          = FALSE;
   time_step          = 21600;
}

////////////////////////////////////////////////////////////////////////////////

