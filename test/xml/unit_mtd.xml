    <output>

      <exist>&OUTPUT_DIR;/mtd/mtd_test_20100517_010000V_2d.txt</exist>
      <exist>&OUTPUT_DIR;/mtd/mtd_test_20100517_010000V_3d_pc.txt</exist>
      <exist>&OUTPUT_DIR;/mtd/mtd_test_20100517_010000V_3d_ps.txt</exist>
      <exist>&OUTPUT_DIR;/mtd/mtd_test_20100517_010000V_3d_sc.txt</exist>
      <exist>&OUTPUT_DIR;/mtd/mtd_test_20100517_010000V_3d_ss.txt</exist>

