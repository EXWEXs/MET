<?xml version="1.0"?>
<!DOCTYPE met_test
[
  <!ENTITY MET_DIR        "${TEST_MET_BASE}">
  <!ENTITY TEST_DIR       "/dakota_d3/projects/MET/MET_test/test">
  <!ENTITY CONFIG_DIR     "${TEST_CONFIG}">
  <!ENTITY DATA_DIR       "/dakota_d3/projects/MET/MET_test_data/unit_test">
  
  <!ENTITY DATA_DIR_MODEL "&DATA_DIR;/model_data">
  <!ENTITY DATA_DIR_OBS   "&DATA_DIR;/obs_data">
  <!ENTITY DATA_DIR_OUT   "${TEST_OUT_DIR}">
]>

<met_test>

  <test_dir>&TEST_DIR;</test_dir>
  <exit_on_fail>true</exit_on_fail>
  
  <test name="ascii2nc_TRMM_3hr">
    <exec>&MET_DIR;/bin/ascii2nc</exec>
    <param> \
      &DATA_DIR_OBS;/trmm/trmm_2012040912_3hr.mtxt \
      &DATA_DIR_OUT;/ascii2nc/trmm_2012040912_3hr.nc \
      -v 1
    </param>   
    <output>
      <point_nc>&DATA_DIR_OUT;/ascii2nc/trmm_2012040912_3hr.nc</point_nc>
    </output>
  </test>
  
  <test name="ascii2nc_TRMM_12hr">
    <exec>&MET_DIR;/bin/ascii2nc</exec>
    <param> \
      &DATA_DIR_OBS;/trmm/trmm_2008080812_12hr.mtxt \
      &DATA_DIR_OUT;/ascii2nc/trmm_2008080812_12hr.nc \
      -v 1
    </param>   
    <output>
      <point_nc>&DATA_DIR_OUT;/ascii2nc/trmm_2008080812_12hr.nc</point_nc>
    </output>
  </test>

  <test name="ascii2nc_GAGE_24hr">
    <exec>&MET_DIR;/bin/ascii2nc</exec>
    <param> \
      &DATA_DIR_OBS;/gauge/2012041012.precip24.ascii \
      &DATA_DIR_OUT;/ascii2nc/gauge_2012041012_24hr.nc \
      -v 1
    </param>   
    <output>
      <point_nc>&DATA_DIR_OUT;/ascii2nc/gauge_2012041012_24hr.nc</point_nc>
    </output>
  </test>

</met_test>
