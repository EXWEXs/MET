<?xml version="1.0"?>
<!DOCTYPE met_test [
  <!ENTITY MET_DIR        "${MET_BUILD_BASE}">
  <!ENTITY MET_BASE       "${MET_BASE}">
  <!ENTITY TEST_DIR       "${MET_TEST_BASE}">
  <!ENTITY INPUT_DIR      "${MET_TEST_INPUT}">
  <!ENTITY OUTPUT_DIR     "${MET_TEST_OUTPUT}">

  <!ENTITY CONFIG_DIR     "&TEST_DIR;/config">
  <!ENTITY DATA_DIR_MODEL "&INPUT_DIR;/model_data">
  <!ENTITY DATA_DIR_OBS   "&INPUT_DIR;/obs_data">
]>

<met_test>

  <test_dir>&TEST_DIR;</test_dir>
  <exit_on_fail>true</exit_on_fail>

  <!-- No dependency on other XML files -->

  <!-- Test -set_hdr option with conventional obs -->
  <test name="gsid2mpr_CONV">
    <exec>&MET_DIR;/bin/gsid2mpr</exec>
    <param> \
      &INPUT_DIR;/gsi_data/GSIdiags4EnKF/diag_conv_ges.mem001 \
      -set_hdr MODEL GSI_MEM001 \
      -outdir &OUTPUT_DIR;/gsid2mpr \
      -v 1
    </param>
    <output>
      <stat>&OUTPUT_DIR;/gsid2mpr/diag_conv_ges.mem001.stat</stat>
    </output>
  </test>

  <!-- Test multiple input files and -suffix option with radiance obs -->
  <test name="gsid2mpr_RAD">
    <exec>&MET_DIR;/bin/gsid2mpr</exec>
    <param> \
      &INPUT_DIR;/gsi_data/GSIdiags4EnKF/diag_amsua_n18_ges.mem001 \
      &INPUT_DIR;/gsi_data/GSIdiags4EnKF/diag_amsua_n18_ges.mem002 \
      -outdir &OUTPUT_DIR;/gsid2mpr \
      -suffix _mpr.txt \
      -v 1
    </param>
    <output>
      <stat>&OUTPUT_DIR;/gsid2mpr/diag_amsua_n18_ges.mem001_mpr.txt</stat>
      <stat>&OUTPUT_DIR;/gsid2mpr/diag_amsua_n18_ges.mem002_mpr.txt</stat>
    </output>
  </test>

  <!-- Test conventional obs with no ensemble mean provided -->  
  <test name="gsidens2orank_CONV_NO_MEAN">
    <exec>&MET_DIR;/bin/gsidens2orank</exec>
    <param> \
      &INPUT_DIR;/gsi_data/GSIdiags4EnKF/diag_conv_ges.mem* \
      -out &OUTPUT_DIR;/gsidens2orank/diag_conv_ges_no_mean_ORANK.txt \
      -v 1
    </param>
    <output>
      <stat>&OUTPUT_DIR;/gsidens2orank/diag_conv_ges_no_mean_ORANK.txt</stat>
    </output>
  </test>

  <!-- Same test as above with ensemble mean provided -->
  <test name="gsidens2orank_CONV_ENS_MEAN">
    <exec>&MET_DIR;/bin/gsidens2orank</exec>
    <param> \
      &INPUT_DIR;/gsi_data/GSIdiags4EnKF/diag_conv_ges.mem* \
      -ens_mean &INPUT_DIR;/gsi_data/GSIdiags4EnKF/diag_conv_ges.ensmean \
      -out &OUTPUT_DIR;/gsidens2orank/diag_conv_ges_ens_mean_ORANK.txt \
      -v 1
    </param>
    <output>
      <stat>&OUTPUT_DIR;/gsidens2orank/diag_conv_ges_ens_mean_ORANK.txt</stat>
    </output>
  </test>

  <!-- Test radiance obs with all channels -->
  <test name="gsidens2orank_RAD">
    <exec>&MET_DIR;/bin/gsidens2orank</exec>
    <param> \
      &INPUT_DIR;/gsi_data/GSIdiags4EnKF/diag_amsua_n18_ges.mem* \
      -out &OUTPUT_DIR;/gsidens2orank/diag_amsua_n18_ges_all_channels_ORANK.txt \
      -v 1
    </param>
    <output>
      <stat>&OUTPUT_DIR;/gsidens2orank/diag_amsua_n18_ges_all_channels_ORANK.txt</stat>
    </output>
  </test>

  <!-- Test radiance obs with select channels -->
  <test name="gsidens2orank_RAD_CHANNEL">
    <exec>&MET_DIR;/bin/gsidens2orank</exec>
    <param> \
      &INPUT_DIR;/gsi_data/GSIdiags4EnKF/diag_amsua_n18_ges.mem* \
      -ens_mean &INPUT_DIR;/gsi_data/GSIdiags4EnKF/diag_amsua_n18_ges.ensmean \
      -channel 2,7,10 \
      -out &OUTPUT_DIR;/gsidens2orank/diag_amsua_n18_ges_some_channels_ORANK.txt \
      -v 1
    </param>
    <output>
      <stat>&OUTPUT_DIR;/gsidens2orank/diag_amsua_n18_ges_some_channels_ORANK.txt</stat>
    </output>
  </test>

  <!-- Run stat_analysis on gsi2mpr output -->
  <test name="stat_analysis_MPR_TO_CNT">
    <exec>&MET_DIR;/bin/stat_analysis</exec>
    <param> \
      -lookin &OUTPUT_DIR;/gsid2mpr/diag_conv_ges.mem001.stat \
      -job aggregate_stat -line_type MPR -out_line_type CNT -by fcst_var \
      -column_thresh ANLY_USE ==1 \
      -out_stat &OUTPUT_DIR;/gsid2mpr/diag_conv_ges.mem001_CNT.txt \
      -v 1
    </param>
    <output>
      <stat>&OUTPUT_DIR;/gsid2mpr/diag_conv_ges.mem001_CNT.txt</stat>
    </output>
  </test>

  <!-- Run stat_analysis on gsidens2orank output -->
  <test name="stat_analysis_ORANK_TO_RHIST">
    <exec>&MET_DIR;/bin/stat_analysis</exec>
    <param> \
      -lookin &OUTPUT_DIR;/gsidens2orank/diag_conv_ges_ens_mean_ORANK.txt \
      -job aggregate_stat -line_type ORANK -out_line_type RHIST -by fcst_var \
      -column_thresh N_USE ==20 \
      -out_stat &OUTPUT_DIR;/gsidens2orank/diag_conv_ges_ens_mean_RHIST.txt \
      -v 1
    </param>
    <output>
      <stat>&OUTPUT_DIR;/gsidens2orank/diag_conv_ges_ens_mean_RHIST.txt</stat>
    </output>
  </test>

</met_test>
