<?xml version="1.0"?>
<!DOCTYPE met_test [
  <!ENTITY MET_DIR        "${MET_BUILD_BASE}">
  <!ENTITY MET_BASE       "${MET_BASE}">
  <!ENTITY TEST_DIR       "${MET_TEST_BASE}">
  <!ENTITY INPUT_DIR      "${MET_TEST_INPUT}">
  <!ENTITY OUTPUT_DIR     "${MET_TEST_OUTPUT}">

  <!ENTITY CONFIG_DIR     "&TEST_DIR;/config">
  <!ENTITY DATA_DIR_MODEL "&INPUT_DIR;/model_data">
  <!ENTITY DATA_DIR_OBS   "&INPUT_DIR;/obs_data">
]>

<met_test>

  <test_dir>&TEST_DIR;</test_dir>
  <exit_on_fail>true</exit_on_fail>

  <!--                                    -->
  <!--  ascii2nc                          -->
  <!--                                    -->

  <test name="ascii2nc_AERONET_daily">
    <exec>&MET_DIR;/bin/ascii2nc</exec>
    <param> \
      &DATA_DIR_OBS;/aeronet/150918_150918_Table_Mountain.lev15 \
      &DATA_DIR_OBS;/aeronet/150918_150918_DRAGON_DenverLaCasa.lev15 \
      -config &CONFIG_DIR;/Ascii2NcConfig_aeronet \
      &OUTPUT_DIR;/ascii2nc/150918_150918_Boulder.lev15.nc \
      -v 1
    </param>   
    <output>
      <point_nc>&OUTPUT_DIR;/ascii2nc/150918_150918_Boulder.lev15.nc</point_nc>
    </output>
  </test>

  <test name="ascii2nc_AERONET_monthly">
    <exec>&MET_DIR;/bin/ascii2nc</exec>
    <param> \
      &DATA_DIR_OBS;/aeronet/150901_150930_Table_Mountain.lev15 \
      &DATA_DIR_OBS;/aeronet/150901_150930_DRAGON_DenverLaCasa.lev15 \
      -config &CONFIG_DIR;/Ascii2NcConfig_aeronet \
      &OUTPUT_DIR;/ascii2nc/150901_150930_Boulder.lev15.nc \
      -v 1
    </param>   
    <output>
      <point_nc>&OUTPUT_DIR;/ascii2nc/150901_150930_Boulder.lev15.nc</point_nc>
    </output>
  </test>

  <!--                                    -->
  <!--  point_stat                        -->
  <!--                                    -->

  <test name="point_stat_GRIB2_f18_NGAC_AERONET_daily">
    <exec>&MET_DIR;/bin/point_stat</exec>
    <env>
      <pair><name>OUTPUT_PREFIX</name>  <value>GRIB2_f18_NGAC_AERONET_daily</value></pair>
    </env>
    <param> \
      &DATA_DIR_MODEL;/grib2/ngac/ngac.t00z.a2df18 \
      &OUTPUT_DIR;/ascii2nc/150918_150918_Boulder.lev15.nc \
      &CONFIG_DIR;/PointStatConfig_aeronet \
      -outdir &OUTPUT_DIR;/point_stat -obs_valid_beg 20150918_000000 -obs_valid_end 20150918_235959 -v 1
    </param>
    <output>
      <stat>&OUTPUT_DIR;/point_stat/point_stat_GRIB2_f18_NGAC_AERONET_daily_180000L_20150917_180000V.stat</stat>
    </output>
  </test>

  <test name="point_stat_GRIB2_f18_NGAC_AERONET_monthly">
    <exec>&MET_DIR;/bin/point_stat</exec>
    <env>
      <pair><name>OUTPUT_PREFIX</name>  <value>GRIB2_f18_NGAC_AERONET_monthly</value></pair>
    </env>
    <param> \
      &DATA_DIR_MODEL;/grib2/ngac/ngac.t00z.a2df18 \
      &OUTPUT_DIR;/ascii2nc/150901_150930_Boulder.lev15.nc \
      &CONFIG_DIR;/PointStatConfig_aeronet \
      -outdir &OUTPUT_DIR;/point_stat -obs_valid_beg 20150918_000000 -obs_valid_end 20150918_235959 -v 1
    </param>
    <output>
      <stat>&OUTPUT_DIR;/point_stat/point_stat_GRIB2_f18_NGAC_AERONET_monthly_180000L_20150917_180000V.stat</stat>
    </output>
  </test>

  <test name="point_stat_GRIB2_f21_NGAC_AERONET_daily">
    <exec>&MET_DIR;/bin/point_stat</exec>
    <env>
      <pair><name>OUTPUT_PREFIX</name>  <value>GRIB2_f21_NGAC_AERONET_daily</value></pair>
    </env>
    <param> \
      &DATA_DIR_MODEL;/grib2/ngac/ngac.t00z.a2df21 \
      &OUTPUT_DIR;/ascii2nc/150918_150918_Boulder.lev15.nc \
      &CONFIG_DIR;/PointStatConfig_aeronet \
      -outdir &OUTPUT_DIR;/point_stat -obs_valid_beg 20150918_000000 -obs_valid_end 20150918_235959 -v 1
    </param>
    <output>
      <stat>&OUTPUT_DIR;/point_stat/point_stat_GRIB2_f21_NGAC_AERONET_daily_210000L_20150917_210000V.stat</stat>
    </output>
  </test>

  <test name="point_stat_GRIB2_f21_NGAC_AERONET_monthly">
    <exec>&MET_DIR;/bin/point_stat</exec>
    <env>
      <pair><name>OUTPUT_PREFIX</name>  <value>GRIB2_f21_NGAC_AERONET_monthly</value></pair>
    </env>
    <param> \
      &DATA_DIR_MODEL;/grib2/ngac/ngac.t00z.a2df21 \
      &OUTPUT_DIR;/ascii2nc/150901_150930_Boulder.lev15.nc \
      &CONFIG_DIR;/PointStatConfig_aeronet \
      -outdir &OUTPUT_DIR;/point_stat -obs_valid_beg 20150918_000000 -obs_valid_end 20150918_235959 -v 1
    </param>
    <output>
      <stat>&OUTPUT_DIR;/point_stat/point_stat_GRIB2_f21_NGAC_AERONET_monthly_210000L_20150917_210000V.stat</stat>
    </output>
  </test>

</met_test>
