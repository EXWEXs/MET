////////////////////////////////////////////////////////////////////////////////
//
// Ensemble-Stat configuration file.
//
// For additional information, see the MET_BASE/data/config/README file.
//
////////////////////////////////////////////////////////////////////////////////

//
// Output model name to be written
//
model = "WRF";

////////////////////////////////////////////////////////////////////////////////

//
// Ensemble product fields to be processed
//
ens = {
   ens_thresh = 0.75;
   vld_thresh = 1.0;

   field = [
      {
         name       = "TMP";
         level      = "Z2";
         cat_thresh = [ <=273.15, >273.15  ];
      },
      {
         name       = "APCP";
         level      = "A24";
         cat_thresh = [ >0.0  ];
      }
   ];
}

////////////////////////////////////////////////////////////////////////////////

//
// Forecast and observation fields to be verified
//
fcst = {
   message_type = [ "ADPSFC" ];
  
   field = [
      {
         name  = "TMP";
         level = "Z2";
      },
      {
         name  = "APCP";
         level = "A24";
      }
   ];
}
obs = fcst;

////////////////////////////////////////////////////////////////////////////////

//
// Point observation time window
//
obs_window = {
   beg = -5400;
   end =  5400;
}

////////////////////////////////////////////////////////////////////////////////

//
// Verification masking regions
//
mask = {
   grid = [ "FULL" ];
   poly = [ "MET_BASE/data/poly/NWC.poly",
            "MET_BASE/data/poly/GRB.poly" ];
   sid  = [ "${CONFIG_DIR}/SID_MESOWEST_OR.txt" ];
};

////////////////////////////////////////////////////////////////////////////////

//
// Interpolation methods
//
interp = {
   field      = BOTH;
   vld_thresh = 1.0;

   type = [
      {
         method = UW_MEAN;
         width  = 1;
      }
   ];
};

////////////////////////////////////////////////////////////////////////////////

//
// Statistical output types
//
output_flag = {
   rhist = BOTH;
   orank = BOTH;
};

////////////////////////////////////////////////////////////////////////////////

//
// Ensemble product output types
//
ensemble_flag = {
   mean      = TRUE;
   stdev     = TRUE; 
   minus     = TRUE;
   plus      = TRUE;
   min       = TRUE;
   max       = TRUE;
   range     = TRUE;
   vld_count = TRUE;
   frequency = TRUE;
   rank      = TRUE;
};

////////////////////////////////////////////////////////////////////////////////

//
// Random number generator
//
rng = {
   type = "mt19937";
   seed = "1";
}

////////////////////////////////////////////////////////////////////////////////

duplicate_flag = NONE;
output_prefix  = "${OUTPUT_PREFIX}";
version        = "V4.0";

