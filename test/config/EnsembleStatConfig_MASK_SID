// For additional information, see the MET_BASE/data/config/README file.
//
////////////////////////////////////////////////////////////////////////////////

//
// Output model name to be written
//
model = "WRF";

////////////////////////////////////////////////////////////////////////////////

//
// Ensemble product fields to be processed
//
ens = {
   ens_thresh = 0.75;
   vld_thresh = 1.0;

   field = [
      {
         name       = "APCP";
         level      = "A24";
         cat_thresh = [ >0.0  ];
      }
   ];
}

////////////////////////////////////////////////////////////////////////////////

//
// Forecast and observation fields to be verified
//
fcst = {
   message_type = [ "ADPSFC" ];
  
   field = [
      {
         name  = "APCP";
         level = "A24";
      }
   ];
}
obs = fcst;

////////////////////////////////////////////////////////////////////////////////

//
// Point observation time window
//
obs_window = {
   beg = -5400;
   end =  5400;
}

////////////////////////////////////////////////////////////////////////////////

//
// Verification masking regions
//
mask = {
   grid = [ ];
   poly = [ ];
   sid  = [ "${CONFIG_DIR}/SID_MESOWEST_OR.txt" ];
};

////////////////////////////////////////////////////////////////////////////////

//
// Interpolation methods
//
interp = {
   field      = BOTH;
   vld_thresh = 1.0;

   type = [
      {
         method = UW_MEAN;
         width  = 1;
      }
   ];
};

////////////////////////////////////////////////////////////////////////////////

//
// Statistical output types
//
output_flag = {
   rhist = BOTH;
   phist = BOTH;
   orank = BOTH;
   ssvar = BOTH;
};

////////////////////////////////////////////////////////////////////////////////

//
// Ensemble product output types
//
ensemble_flag = {
   mean      = FALSE;
   stdev     = FALSE;
   minus     = FALSE;
   plus      = FALSE;
   min       = FALSE;
   max       = FALSE;
   range     = FALSE;
   vld_count = FALSE;
   frequency = FALSE;
   rank      = FALSE;
};

////////////////////////////////////////////////////////////////////////////////

//
// Random number generator
//
rng = {
   type = "mt19937";
   seed = "1";
}

////////////////////////////////////////////////////////////////////////////////

duplicate_flag = NONE;
output_prefix  = "${OUTPUT_PREFIX}";
version        = "V4.0";

