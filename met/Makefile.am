ACLOCAL_AMFLAGS		= -I m4

SUBDIRS 		= data src

#if IS_MET_DEVELOPMENT
  SUBDIRS += internal_tests
#endif

MAINTAINERCLEANFILES 	= \
	Makefile.in \
	aclocal.m4 \
	configure \
	config.h.in

# Remove an SVN files from the distribution

dist-hook:
	-rm -rf `find ${distdir} -name .svn`
	${top_srcdir}/src/tools/dev_utils/chk4copyright -dir ${distdir} -notice ${top_srcdir}/data/copyright_notice.txt

# Run the non-standard test suite

test:
	run_tests ${abs_top_builddir} ${pkgdatadir}

.PHONY: test

# Other files/directories that need to be included
# in the distribution

EXTRA_DIST = \
	out \
	scripts \
	Make-include \
	run_tests


